@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutYönetici.cshtml"; // Kullanılan layout'un dosya yolu
    @model IEnumerable<IsTakipSistemiMVC.Models.ToplamIs>
}


<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <ul class="list-group">
                <li class="list-group-item d-flex justify-content-between align-items-center" style="background-color: #EEE0C9; color: black">
                    <strong>@ViewBag.birimAd Birimi: Yıl içinde Yapılan İş Toplamı</strong>
                </li>
                @foreach (var item in Model)
                {

                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <strong>@item.personelAdSoyad:</strong>
                        <div class="badge-group">
                            <span class="badge bg-secondary text-white rounded-pill badge-custom">Okunacak İş : @item.okunacakIs</span>
                            <span class="badge bg-primary text-white rounded-pill badge-custom">Yapımına Başlanmayan İşler : @item.yapiliyorIs</span>
                            <span class="badge bg-warning text-dark rounded-pill badge-custom"> Yapıma Başlanmış İşler : @item.yapilacakIs</span>
                            <span class="badge bg-info text-white rounded-pill badge-custom">Toplam tamamlanan İş sayısı : @item.toplamIs</span>
                        </div>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>
